<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_clothes">

    <TextView
        android:id="@+id/textView"
        android:layout_width="278dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="633dp"
        android:text="Add items"
        android:textAlignment="center"
        android:textColor="#2EE07E"
        android:textSize="36sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/cloth_image_view"
        android:layout_width="307dp"
        android:layout_height="129dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="486dp" />

    <Button
        android:id="@+id/upload_cloth_image"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="427dp"
        android:text="Upload" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="361dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#6299F0"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="286dp"
        android:ems="10"
        android:hint="Name"
        android:textAlignment="center"
        android:textColor="#6299F0"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="215dp"
        android:ems="10"
        android:hint="Remark"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#6299F0"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/category_clothe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="143dp"
        android:ems="10"
        android:hint="Category"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#6299F0"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_bar_cloth"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_cloth_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="-378dp" />

    <Button
        android:id="@+id/add_cloth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="35dp"
        android:background="#FF0303"
        android:text="@string/add"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

</RelativeLayout>